[difftool]
    prompt = true

[diff]
  tool = nvimdiff

[difftool "nvimdiff"]
  cmd = "/home/einsam/.local/bin/lvim -d \"$LOCAL\" \"$REMOTE\""

[color]
  ui = auto
[color "branch"]
  current = blue reverse
  local = green
  remote = yellow
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = red

set selection-clipboard clipboard
map ; focus_inputbar ":"

#Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
# 边界
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""
map p feedkeys ":set guioptions s"<Return>
map h feedkeys ":set guioptions h"<Return>
map R feedkeys ":set recolor"<Return>

set font "monospace 15"
set default-bg "#12151d" #00
set default-fg "#ABB2BF" #01

set statusbar-fg "#ABB2BF" #04
set statusbar-bg "#12151d" #01

set inputbar-bg "#1e222a" #00
set inputbar-fg "#ABB2BF" #02

set notification-error-bg "#E06C75" #08
set notification-error-fg "#12151d" #00

set notification-warning-bg "#D19A66" #08
set notification-warning-fg "#12151d" #00

set highlight-color "#98C379" #0A
set highlight-active-color "#ABB2BF" #0D

set completion-highlight-fg "#12151d" #02 命令行栏 命令tab补全后选中项
set completion-highlight-bg "#C678DD" #0C

set completion-bg "#1e222a" #02 命令行栏 补全框
set completion-fg "#ABB2BF" #0C

set notification-bg "#1e222a" #0B 复制后的通知栏背景
set notification-fg "#c0caf5" #00 通知栏字体

set recolor "false" # 颜色反转
set recolor-lightcolor "#12151d" #00暗色模式背景颜色
set recolor-darkcolor "#ABB2BF" #06 暗色模式字体颜色

# zathurarc-dark

set recolor-keephue "true" # 是否保持原色调当反转


set render-loading "false" #是否显示"Loading"提示在反转颜色时
set scroll-step 50
# unmap f
# map f toggle_fullscreen
# map [fullscreen] f toggle_fullscreen
